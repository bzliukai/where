	<script type="text/javascript">
		apiready = function() {

			  window.imageClip = api.require('imageClip');
		};
		
		
	//修改userPic
	function newUser_pic(){
		api.actionSheet({
		    cancelTitle: '取消',
		    buttons: ['相册','照相机']
			},function(ret,err){
				if(ret.buttonIndex == 1){
					var scene = 'album';
					select(scene);
				}else if(ret.buttonIndex == 2){
					var scene = 'camera';
					select(scene);
				}else{
					return false;
				}
			
				
		});
	}
	function newselct(){
		select("album");
	}
	function select(scene){
	api.getPicture({
	    sourceType: scene,
	    encodingType: 'jpg',
	    mediaValue: 'pic',
	    destinationType: 'url'
	}, function(ret, err){ 
	    if (ret) {
	    	
	         if(!ret.data){//如果不选择图片，则退出
	         	return ;
	         }
	    	api.openWin({
	    		name:"imageWin",
	    		url:"imageWin.html",
	    		pageParam:{
	    			imgUrl:ret.data
	    		},
	    		animation:{
	    			type:"curl",
	    			subType:"from_top",
	    			duration:0
	    		}
	    	})
	
	    } else{
	        api.alert({msg:err.msg});
	    }
	});
	return false;
	}
		//恢复默认头像
	function csh() {
		document.getElementById('avatar').src = "../image/lala.jpg";
	}
	//图片保存 关闭截图
	function ImgUrl(savePath){
			console.log(3);
			
			$api.attr($api.byId('avatar'),'src', savePath);
			api.closeWin({
				name:"imageWin"
            });
	}
	</script>
